<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/mapView"
              android:layout_marginTop="400dp"
              tools:context=".DetailActivity"
              android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <ImageView
            android:layout_width="269dp"
            android:layout_height="200dp" app:srcCompat="@android:drawable/screen_background_dark_transparent"
            android:id="@+id/detailImageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="190dp"
            android:layout_height="37dp"
            android:id="@+id/nameTextView" android:textSize="24sp"
            android:textAlignment="center" android:text="Name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detailImageView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:layout_width="187dp"
            android:layout_height="38dp"
            android:id="@+id/typeTextView" android:textSize="24sp"
            android:textAlignment="center" android:text="Type" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"/>

    <TextView
            android:layout_width="187dp"
            android:layout_height="37dp"
            android:id="@+id/atmosphereTextView" android:textSize="24sp"
            android:textAlignment="center" android:text="Atmosphere" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/typeTextView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.504"/>


</android.support.constraint.ConstraintLayout>